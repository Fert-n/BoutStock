{% trans_default_domain 'edit' %}

<form method="post" action="{{ path('bottle_delete', {'slug': bottle.slug}) }}" onsubmit="return confirm('{{ 'bottle.delete.confirm'|trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bottle.id) }}">
    <button class="btn" >{{ 'edit.delete'|trans }}</button>
</form>
