{% extends 'base.html.twig' %}

{% block title %}{{ 'bottle.page_title'|trans }}{% endblock %}

{% trans_default_domain 'bottle' %}

{% block body %}
    <h1>{{ 'bottle.title'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'bottle.name'|trans }}</th>
                <th>{{ 'bottle.quantity'|trans }}</th>
                <th>{{ 'bottle.misebout'|trans }}</th>
                <th>{{ 'bottle.createat'|trans }}</th>
                <th>{{ 'bottle.region'|trans }}</th>
                <th>{{ 'bottle.contenance'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for bottle in bottles %}
            <tr>
                <td>{{ bottle.name }}</td>
                <td>{{ bottle.quantity }}</td>
                <td>{{ bottle.misebout ? bottle.misebout|date('Y-m-d') : '' }}</td>
                <td>{{ bottle.createat ? bottle.createat|date('Y-m-d') : '' }}</td>
                <td>{{ bottle.region }}</td>
                <td>{{ bottle.contenance }}</td>
                <td>
                    <a href="{{ path('bottle_show', {'id': bottle.id}) }}">{{ 'bottle.show'|trans }}</a>
                    <a href="{{ path('bottle_edit', {'id': bottle.id}) }}">{{ 'bottle.edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ 'bottle.nofound'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bottle_new') }}">{{ 'bottle.createnew'|trans }}</a>
{% endblock %}
