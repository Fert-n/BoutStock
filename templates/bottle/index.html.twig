{% extends 'base.html.twig' %}

{% block title %}{{ 'bottle.page_title'|trans }}{% endblock %}

{% trans_default_domain 'bottle' %}

{% block body %}
    <h1>{{ 'bottle.title'|trans }}</h1>

    <div>
        <a href="{{ path('bottle_list_by_category', { slug: 'vins' }) }}">{{ 'bottle.vins'|trans }}</a>
        <a href="{{ path('bottle_list_by_category', { slug: 'alcool-fort' }) }}">{{ 'bottle.alcoolFort'|trans }}</a>
        <a href="{{ path('bottle_list_by_category', { slug: 'sans-alcool' }) }}">{{ 'bottle.sansAlcool'|trans }}</a>
        <a href="{{ path('bottle_index') }}">{{ 'bottle.allTypes'|trans }}</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'bottle.name'|trans }}</th>
                <th>{{ 'bottle.quantity'|trans }}</th>
                <th>{{ 'bottle.type'|trans }}</th>
                <th>{{ 'bottle.misebout'|trans }}</th>
                <th>{{ 'bottle.region'|trans }}</th>
                <th>{{ 'bottle.action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for bottle in bottles %}
            <tr>
                <td>{{ bottle.name }}</td>
                <td>{{ bottle.quantity }}</td>
                <td>{{ bottle.type.type }}</td>
                <td>{{ bottle.misebout ? bottle.misebout|date('Y') : '' }}</td>
                <td>{{ bottle.region }}</td>
                <td>
                    <a href="{{ path('bottle_show', {'slug': bottle.slug}) }}"><i class="bi bi-search"></i></a>
                    <a href="{{ path('bottle_edit', {'slug': bottle.slug}) }}"><i class="bi bi-pencil-fill"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ 'bottle.nofound'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('bottle_new') }}">{{ 'bottle.createnew'|trans }}</a>

{% endblock %}