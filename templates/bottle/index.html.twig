{% extends 'base.html.twig' %}

{% block title %}Bottle{% endblock %}

{% block body %}
    <h1>Bottle</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Misebout</th>
                <th>Createat</th>
                <th>Region</th>
                <th>Contenance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bottle in bottles %}
            <tr>
                <td>{{ bottle.id }}</td>
                <td>{{ bottle.name }}</td>
                <td>{{ bottle.quantity }}</td>
                <td>{{ bottle.misebout ? bottle.misebout|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bottle.createat ? bottle.createat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bottle.region }}</td>
                <td>{{ bottle.contenance }}</td>
                <td>
                    <a href="{{ path('bottle_show', {'id': bottle.id}) }}">show</a>
                    <a href="{{ path('bottle_edit', {'id': bottle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bottle_new') }}">Create new</a>
{% endblock %}
