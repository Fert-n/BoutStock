{% extends 'base.html.twig' %}

{% block title %}Bottle{% endblock %}

{% block body %}
    <h1>Bottle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bottle.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bottle.name }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ bottle.quantity }}</td>
            </tr>
            <tr>
                <th>Misebout</th>
                <td>{{ bottle.misebout ? bottle.misebout|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Createat</th>
                <td>{{ bottle.createat ? bottle.createat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ bottle.region }}</td>
            </tr>
            <tr>
                <th>Contenance</th>
                <td>{{ bottle.contenance }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bottle_index') }}">back to list</a>

    <a href="{{ path('bottle_edit', {'id': bottle.id}) }}">edit</a>

    {{ include('bottle/_delete_form.html.twig') }}
