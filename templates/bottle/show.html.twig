{% extends 'base.html.twig' %}
{% trans_default_domain 'show' %}

{% block title %}{{ 'show.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'show.detail'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'show.name'|trans }}</th>
                <td>{{ bottle.name }}</td>
            </tr>
            <tr>
                <th>{{ 'show.quantity'|trans }}</th>
                <td>{{ bottle.quantity }}</td>
            </tr>
            <tr>
                <th>{{ 'show.misebout'|trans }}</th>
                <td>{{ bottle.misebout ? bottle.misebout|date('Y') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'show.crateat'|trans }}</th>
                <td>{{ bottle.createat ? bottle.createat|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'show.region'|trans }}</th>
                <td>{{ bottle.region }}</td>
            </tr>
            <tr>
                <th>{{ 'show.contenance'|trans }}</th>
                <td>{{ bottle.contenance }}</td>
            </tr>
            <tr>
                <th>{{ 'show.type'|trans }}</th>
                <td>{{ bottle.type.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bottle_index') }}">{{ 'show.backtolist'|trans }}</a>

    <a href="{{ path('bottle_edit', {'slug': bottle.slug}) }}">{{ 'show.edit'|trans }}</a>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        {{ 'show.logout'|trans }}
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{ 'show.logout'|trans }}</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ 'show.modal'|trans }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'show.no'|trans }}</button>
                    <a href="{{ path('app_logout') }}" class="btn btn-primary">{{ 'show.yes'|trans }}</a>
                </div>
            </div>
        </div>
    </div>

    {{ include('bottle/_delete_form.html.twig') }}
{% endblock %}
