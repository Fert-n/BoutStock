{% extends 'base.html.twig' %}
{% trans_default_domain 'user' %}

{% block title %}{{ 'user.user'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'user.user'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'user.username'|trans }}</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>{{ 'user.email'|trans }}</th>
                <td>{{ user.email }}</td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('user_edit', {'id': user.id}) }}">{{ 'user.password'|trans }}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
